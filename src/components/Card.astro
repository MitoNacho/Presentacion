---
//src/components/Card.astro
const {name, position, aboutMe, porfolio, linkedin, github, cvLink, profileImage } = Astro.props;

import '../styles/card.css';
---

<div class="container">
    <div class="card-container">
        <div class="descripcion">
            <h1 class="nacho">{name}</h1>
            <h2 class="titulo">{position}</h2>
            <p>{aboutMe}</p>
            <div class="icons">
                <a href={porfolio} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">
                        Portfolio
                    </span>
                    <i class="bi bi-file-earmark-code"></i>
                </a>
                <a href={linkedin} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">
                        LinkedIn
                    </span>
                    <i class="bi bi-linkedin"></i>
                </a>
                <a href={github} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">
                        GitHub
                    </span>
                    <i class="bi bi-github"></i>
                </a>
                <a href={cvLink} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">
                        Resume
                    </span>
                    <i class="bi bi-file-earmark-arrow-down"></i>
                </a>
            </div>
        </div>
        <div class="image">
            <img src={profileImage} alt="">
        </div>
    </div>
</div>